<%- include('partials/header.ejs') %>

<header class="text-center">
    <h1>Create a New Post!</h1>
    <p>⬇️ Share your thoughts by submitting the form below ⬇️</p>
</header>

<div class="container my-3 mx-5">
    <form action="/submit" method="POST">
        <div class="row">
            <div class="col-md-6 mb-3">
                <input type="text" name="title" class="form-control" placeholder="Post Title" required>
            </div>
            <div class="col-md-6 mb-3">
                <input type="text" class="form-control" placeholder="Image URL" required>
            </div>
        </div>

        <div class="my-3">
            <textarea name="content" class="form-control" rows="5" placeholder="Write your post content here..."
                required></textarea>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="my-3 btn btn-primary">Submit Post</button>
        </div>
    </form>
</div>

<%- include('partials/footer.ejs') %>