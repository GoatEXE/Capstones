<%- include('partials/header.ejs') %>


<header class="text-center">
    <h1>Welcome to the Cheeky Goat Blog!</h1>
    <p>This is a place where you can share your completely fictitious thoughts with the world.</p>
</header>

<section id="posts" class="container">
    <h2>Recent Posts</h2>
    <div class="row">
        <% for(i = posts.length - 1; i >= posts.length - 8 && i >= 0; i--) { %>
            <div class="col-12 col-md-6 col-lg-3 mb-4">
                <a href="/post/<%= posts[i].id %>" class="text-decoration-none text-reset">
                    <div class="card h-100">
                        <img src="<%= posts[i].image %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"><%= posts[i].title %></h5>
                            <p class="card-text"><%= posts[i].content %></p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</section>


